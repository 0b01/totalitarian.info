<div class="box">
	<div class="legend">
		Edit Story
	</div>

	<%= form_for @story, :url => story_url(@story.short_id),
  :method => :put do |f| %>
		<%= render :partial => "stories/form", :locals => { :story => @story,
      :f => f } %>

    <p></p>
    <div class="box">
      <%= submit_tag "Save" %>
      &nbsp;or <a href="<%= story_url(@story.short_id) %>">cancel editing</a>
    </div>
	<% end %>
</div>
