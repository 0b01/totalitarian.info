<div class="box wide">
  <p>
  <strong><%= @title %> (<%= @user_count %>)</strong>
  </p>

  <p>
  Newest users:
  <%= raw @newest.map{|u| "<a class=\"new_user\"> Anonymous</a> " <<
    "(#{u.karma})" }.join(", ") %>
  </p>

  <ul class="root">

    <% subtree = @users_by_parent[nil] %>
    <% ancestors = [] %>

    <% while subtree %>
      <% if (user = subtree.pop) %>
        <li>
          <a 
            class="new_user"
            <% if !user.is_active? %>
              class="inactive_user"
            <% end %>
            >Anonymous</a>&nbsp;(<%= user.karma %>)
          <% if user.is_admin? %>
            (administrator)
          <% elsif user.is_moderator? %>
            (moderator)
          <% end %>
          <% if (children = @users_by_parent[user.id]) %>
            <% # drill down deeper in the tree %>
            <% ancestors << subtree %>
            <% subtree = children %>
            <ul class="user_tree">
          <% else %>
            </li>
          <% end %>
      <% else %>
        <% # climb back out %>
        <% subtree = ancestors.pop %>
        <% if subtree %>
          </ul></li>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
